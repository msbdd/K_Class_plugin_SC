<?xml version="1.0" encoding="UTF-8"?>
<seiscomp>
	<plugin name="K_Class">
		<extends>global</extends>
		<description>
		The K_Class plugin to calculate magnitude-alike "Klass"/"Class"
		parameter that could be used in CIS countries.
		</description>
	</plugin>
	<binding name="K_Class" module="global">
		<description>
		The K_Class plugin to calculate magnitude-alike "Klass"/"Class"
		parameter that could be used in CIS countries. 
		This code is a modified/inspired version of the MLh plugin (SED) 
		and other magnitudes and amplitudes plugins.
		</description>
		<configuration>
			<group name="magnitudes">
				<group name="K_Class">
					<parameter name="l1" type="double" default="75.0">
						<description>
						First corner epicentral distance
						</description>
					</parameter>
					<parameter name="l2" type="double" default="264.0">
						<description>
						Second corner epicentral distance
						</description>
					</parameter>
					<parameter name="l3" type="double" default="800.0">
						<description>
						Third corner epicentral distance
						</description>
					</parameter>
					<parameter name="A" type="double" default="1.84">
						<description>
						Main slope 
						</description>
					</parameter>
					<parameter name="a1" type="double" default="2.11">
						<description>
						Slope for the segment &lt; l1 
						</description>
					</parameter>
					<parameter name="a2" type="double" default="1.1">
						<description>
						Slope for the segment &gt; l1 &lt; l2 
						</description>
					</parameter>
					<parameter name="a3" type="double" default="2.98">
						<description>
						Slope for the segment &gt; l2 &lt; l3 
						</description>
					</parameter>
					<parameter name="a4" type="double" default="0">
						<description>
						Slope for the segment &gt; l3 
						</description>
					</parameter>
					<parameter name="b1" type="double" default="1.32">
						<description>
						Intercept for the segment &lt; l1 
						</description>
					</parameter>
					<parameter name="b2" type="double" default="3.21">
						<description>
						Intercept for the segment &gt; l1 &lt; l2 
						</description>
					</parameter>
					<parameter name="b3" type="double" default="-1.34">
						<description>
						Intercept for the segment &gt; l2 &lt; l3 
						</description>
					</parameter>
					<parameter name="b4" type="double" default="8">
						<description>
						Intercept for the segment &gt; l3 
						</description>
					</parameter>
				</group>
			</group>
		</configuration>
	</binding>
</seiscomp>
